@page "/authentication-result"
@using System.Security.Claims
@using AuthenticationWithGoogle.Utilities
@using Microsoft.AspNetCore.Components.Authorization
@inject BlazorAuthenticationStateProvider BlazorAuthenticationStateProvider

<AuthorizeView>
    <Authorized>
        @if (BlazorAuthenticationStateProvider.CurrentUser is not null)
        {
            <div>Authenticated</div>
            <div>User: @BlazorAuthenticationStateProvider.CurrentUser.Username</div>
            <div>Password: @BlazorAuthenticationStateProvider.CurrentUser.Password</div>
        }
    </Authorized>
    <Authorizing><div>Loading...</div></Authorizing>
    <NotAuthorized><div>Not authenticated</div></NotAuthorized>
</AuthorizeView>